<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/item_image_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cv_img"
            android:layout_alignTop="@id/cv_img"
            android:text="Name"
            android:layout_marginStart="15dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItem"
            android:layout_toEndOf="@id/cv_img"
            android:layout_marginStart="16dp"
            android:text="ID :"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/id_tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItem"
            android:layout_toEndOf="@id/id_user"
            android:layout_marginStart="4dp"
            android:text="4090245"
            android:textSize="18sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
